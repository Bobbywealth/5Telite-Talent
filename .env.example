# ==============================================
# 5TELITE TALENT PLATFORM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# For Render PostgreSQL, get this from your Render dashboard
DATABASE_URL=postgresql://user:password@localhost:5432/talent_platform

# ==============================================
# SESSION & SECURITY
# ==============================================
# Generate a strong random secret for sessions (use: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# ==============================================
# EMAIL SERVICE (SMTP)
# ==============================================
# SMTP server configuration for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Email addresses
FROM_EMAIL=noreply@5telite.com
ADMIN_EMAIL=admin@5telite.com

# ==============================================
# GOOGLE CLOUD STORAGE
# ==============================================
# For file uploads (profile images, documents, etc.)
GCS_PROJECT_ID=your-gcs-project-id
GCS_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GCS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
GCS_BUCKET=your-bucket-name

# ==============================================
# APPLICATION URLS
# ==============================================
# Frontend URL for email links and CORS
FRONTEND_URL=http://localhost:5173

# ==============================================
# REPLIT (Optional - only if deploying on Replit)
# ==============================================
# REPLIT_DOMAINS=your-repl-domain.repl.co
# ISSUER_URL=https://replit.com/oidc
# REPL_ID=your-repl-id

# ==============================================
# ENVIRONMENT
# ==============================================
# Set to 'production' in production, 'development' for local dev
NODE_ENV=development

# Server port (Render will set this automatically)
PORT=5000
